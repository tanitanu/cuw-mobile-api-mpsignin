@using System.Security.Claims;
@if(User.Identity.IsAuthenticated){
    <form method="post" class="form-inline" asp-action="LogOut" asp-controller="SignIn">
        Welcome @User.Identity.Name?.Split(" ")[0] @(User.IsInRole("ADMIN") ? "[ADMIN]" : User.IsInRole("DEV") ? "[DEV]" : User.IsInRole("USER") ? "[USER]" : "") 
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
} else {
    <a class="btn btn-link" asp-action="Index" asp-controller="SignIn">Login</a>
}